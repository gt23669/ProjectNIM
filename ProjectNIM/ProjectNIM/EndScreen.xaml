<Window x:Class="ProjectNIM.EndScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectNIM"
        mc:Ignorable="d"
        Title="EndScreen" Height="450" Width="800">
	<Viewbox>
		<Grid>
			<Image Name="imgScreen" Height="250" Width="550" VerticalAlignment="Top" Margin="0,0,0,30"></Image>
			<Button Name="btnNewGame" Height="30" Width="70" Margin="200,255,275,-5" Content="New Game" Click="btnNewGame_Click"></Button>
			<Button Name="btnMainMenu" Height="30" Width="70" Content="Main Menu" Margin="280,255,200,-5" Click="btnMainMenu_Click"></Button>
		</Grid>
	</Viewbox>
</Window>
